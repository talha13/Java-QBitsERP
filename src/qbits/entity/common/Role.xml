<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="qbits.entity.common.Role" table="role">
        <id name="roleId" type="java.lang.Integer">
            <column name="role_id"/>
            <generator class="identity"/>
        </id>
        <property name="title" type="string">
            <column length="100" name="title" not-null="true"/>
        </property>
        <property name="status" type="boolean">
            <column name="status" not-null="true"/>
        </property>
    
        <set name="employess" table="employee_role" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="role_id" not-null="true"></column>
            </key>
            <many-to-many class="qbits.entity.common.Employee">
                <column name="employee_id" not-null="true"></column>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
